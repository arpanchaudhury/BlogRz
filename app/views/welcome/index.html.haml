.canvas
  = form_for(@blogger, :url => session_path(@blogger), :html => {:style => "width:30%;float:right"}) do |f|
    %h2 Sign in
    %div.form-group
      = f.label :email
      %div.input-group
        %span.input-group-addon
        = f.email_field :email, :class => 'form-control'
    %div.form-group
      = f.label :password
      %div.input-group
        %span.input-group-addon
        = f.password_field :password, :class => 'form-control'
    %div.form-group
      = f.check_box :remember_me
      = f.label :remember_me
    = f.submit "Sign in", :class => "btn btn-success"
    %br
    %br
    %img{src: '/assets/twitter-logo.png', height: 64, width:64}
    = link_to "Sign in with Twitter", omniauth_authorize_path(@blogger, 'twitter')
  %img{:src => '/assets/tag-cloud.gif', :width => "65%", :height => "70%"}
